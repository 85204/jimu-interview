body 
  font-family: 'Microsoft YaHei','Heiti SC',simhei,'Lucida Sans Unicode','Myriad Pro','Hiragino Sans GB',Verdana;
  background: #c6eefb

a 
  text-decoration: none

.main 
  width: 1140px;
  margin: 0 auto;
  padding-bottom: 190px
  .banner 
    width: 100%;
    position: relative
    .banner-bg 
      display: block;
      width: 100%;
      min-width: 1140px;
      z-index: -1
    .block-left 
      position: absolute;
      top: 0;
      color: #fff;
      width: 630px;
      padding: 90px 0
    .block-left>div 
      margin: 28px auto 0;
      width: 292px
      h2 
        font-size: 40px;
        margin: 0 auto 28px;
        font-weight: 700;
        line-height: 52px;
        color: #2c3038
      img.logo 
        width: 120px;
        display: inline-block;
        vertical-align: middle
      .buttons 
        vertical-align: middle;
        display: inline-block;
        margin: 0 20px
      .qrcode 
        vertical-align: middle;
        display: inline-block;
        position: relative;
        background: rgba(255,255,255,.2);
        border-radius: 3px
        img 
          width: 100px;
          display: block
        p 
          position: absolute;
          text-align: center;
          color: #fff;
          width: 100%;
          left: 0;
          margin-top: 11px
  a.btn 
    display: block;
    width: 120px;
    height: 36px;
    font-size: 13px;
    line-height: 36px;
    text-decoration: none;
    color: #fff;
    background: #5c90f3;
    border-radius: 6px;
    margin: 0 auto;
    text-align: center
    span 
      vertical-align: middle
    .label 
      display: inline-block;
      min-width: 65px
  a.btn.android 
    margin-top: 20px
  .section 
    padding-top: 30px;
    position: relative
    .img-wrap 
      margin: 0 auto;
      text-align: center
      img 
        position: relative;
        width: 280px;
        display: inline-block;
        vertical-align: top;
        z-index: -1
      .userCenter 
        margin: 0 -80px;
        z-index: 1
      .safeguard, .activity 
        padding-top: 76px 
    .section-bg 
      position: absolute;
      left: 100px;
      top: 320px;
      width: 50px;
      height: 250px;
      transform: rotate(-300deg);
      background: linear-gradient(-180deg,#9de6ff 0,#f1ffdd 100%);
      border-radius: 3000px
  .footer 
    position: relative;
    width: 1000px;
    height: 300px;
    margin: 0 auto;
    background: #fff;
    margin-top: -130px;
    overflow: hidden;
    z-index: 10
    .footer-left 
      float: left;
      width: 350px;
      background: #5c90f3;
      padding: 40px 50px 80px;
      box-sizing: border-box
      .label_scan 
        font-size: 13px;
        line-height: 17px;
        font-weight: 700;
        color: #ffde37;
        margin: 0 0 5px
      .label_download 
        font-size: 20px;
        line-height: 26px;
        font-weight: 700;
        color: #fff;
        margin: 0 0 31px
      .qrcode 
        img 
          width: 100px    
        .logo 
          display: inline-block;
          margin-right: 46px
    .footer-right 
      padding: 45px 64px 45px 414px;
      letter-spacing: -3px
      .footer-item 
        display: inline-block;
        width: 260px;
        height: 100px;
        letter-spacing: 3px;
        text-align: center
        img 
          width: 50px;
          display: block;
          margin: 0 auto
        p 
          font-size: 16px;
          line-height: 21px;
          color: #5d5d5d;
          margin: 11px 0 0
      .footer-item:nth-child(n+3) 
        border-top: 1px solid rgba(92,144,243,.2)
        img
          margin-top: 30px
      .footer-item:nth-child(2n+1) 
        border-right: 1px solid rgba(92,144,243,.2)

#scrollUp 
  bottom: 40px;
  right: 40px;
  height: 38px;
  width: 38px;
  background: url(/static/assets/top_347334a.png) no-repeat

